<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_journal_dashboard_kanban_view_inherit" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='bank_journal_cta']" position="inside">
                 <button type="action" name="%(om_bank_statement_import_custom.action_om_bank_statement_import)d" 
                        class="btn btn-secondary btn-sm"
                        context="{'default_journal_id': active_id}">
                    Import Statement
                </button>
            </xpath>
        </field>
    </record>
</odoo>
